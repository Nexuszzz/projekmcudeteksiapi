{
  "description": "Example MQTT payloads for testing IoT Fire Detection Dashboard",
  "payloads": {
    "normal_reading": {
      "description": "Normal sensor reading without alarm",
      "topic": "nimak/deteksi-api/telemetry",
      "payload": {
        "id": "ESP32-TEST001",
        "t": 27.5,
        "h": 62.0,
        "gasA": 1200,
        "gasD": 0,
        "alarm": false
      }
    },
    "high_temperature": {
      "description": "High temperature reading",
      "topic": "nimak/deteksi-api/telemetry",
      "payload": {
        "id": "ESP32-TEST001",
        "t": 45.8,
        "h": 55.0,
        "gasA": 1500,
        "gasD": 0,
        "alarm": true
      }
    },
    "gas_detected": {
      "description": "Gas detection triggered",
      "topic": "nimak/deteksi-api/telemetry",
      "payload": {
        "id": "ESP32-TEST001",
        "t": 28.0,
        "h": 60.0,
        "gasA": 3200,
        "gasD": 1,
        "alarm": true
      }
    },
    "fire_alarm": {
      "description": "Full fire alarm - high temp and gas",
      "topic": "nimak/deteksi-api/telemetry",
      "payload": {
        "id": "ESP32-TEST001",
        "t": 52.3,
        "h": 45.0,
        "gasA": 3850,
        "gasD": 1,
        "alarm": true
      }
    },
    "minimal_data": {
      "description": "Minimal payload with defaults",
      "topic": "nimak/deteksi-api/telemetry",
      "payload": {
        "id": "ESP32-TEST001"
      }
    },
    "null_values": {
      "description": "Payload with null sensor values",
      "topic": "nimak/deteksi-api/telemetry",
      "payload": {
        "id": "ESP32-TEST001",
        "t": null,
        "h": null,
        "gasA": null,
        "gasD": null,
        "alarm": false
      }
    },
    "device_status_online": {
      "description": "Device coming online",
      "topic": "nimak/deteksi-api/status",
      "payload": {
        "id": "ESP32-TEST001",
        "status": "online",
        "ip": "192.168.1.50",
        "rssi": -45
      }
    },
    "device_status_offline": {
      "description": "Device going offline",
      "topic": "nimak/deteksi-api/status",
      "payload": {
        "id": "ESP32-TEST001",
        "status": "offline"
      }
    }
  },
  "commands": {
    "buzzer_on": {
      "description": "Turn buzzer ON",
      "topic": "nimak/deteksi-api/cmd",
      "payload": "BUZZER_ON"
    },
    "buzzer_off": {
      "description": "Turn buzzer OFF",
      "topic": "nimak/deteksi-api/cmd",
      "payload": "BUZZER_OFF"
    },
    "set_threshold_low": {
      "description": "Set gas threshold to 1500",
      "topic": "nimak/deteksi-api/cmd",
      "payload": "THR=1500"
    },
    "set_threshold_medium": {
      "description": "Set gas threshold to 2500",
      "topic": "nimak/deteksi-api/cmd",
      "payload": "THR=2500"
    },
    "set_threshold_high": {
      "description": "Set gas threshold to 3500",
      "topic": "nimak/deteksi-api/cmd",
      "payload": "THR=3500"
    }
  },
  "test_scenarios": {
    "scenario_1_normal_operation": {
      "description": "Simulate normal operation for 30 seconds",
      "steps": [
        {
          "interval_ms": 2000,
          "count": 15,
          "payload": {
            "id": "ESP32-TEST001",
            "t": 27.5,
            "h": 62.0,
            "gasA": 1200,
            "gasD": 0,
            "alarm": false
          }
        }
      ]
    },
    "scenario_2_gradual_fire": {
      "description": "Simulate gradual fire development",
      "steps": [
        {
          "description": "Normal reading",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 27.5,
            "h": 62.0,
            "gasA": 1200,
            "gasD": 0,
            "alarm": false
          }
        },
        {
          "description": "Temperature rising",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 35.0,
            "h": 58.0,
            "gasA": 1800,
            "gasD": 0,
            "alarm": false
          }
        },
        {
          "description": "Gas detected",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 42.0,
            "h": 52.0,
            "gasA": 2800,
            "gasD": 1,
            "alarm": true
          }
        },
        {
          "description": "Full alarm",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 55.0,
            "h": 45.0,
            "gasA": 3900,
            "gasD": 1,
            "alarm": true
          }
        }
      ]
    },
    "scenario_3_false_alarm_recovery": {
      "description": "Simulate false alarm and recovery",
      "steps": [
        {
          "description": "Normal",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 28.0,
            "h": 60.0,
            "gasA": 1300,
            "gasD": 0,
            "alarm": false
          }
        },
        {
          "description": "Brief spike (cooking?)",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 38.0,
            "h": 55.0,
            "gasA": 2600,
            "gasD": 1,
            "alarm": true
          }
        },
        {
          "description": "Recovering",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 32.0,
            "h": 58.0,
            "gasA": 1800,
            "gasD": 0,
            "alarm": false
          }
        },
        {
          "description": "Back to normal",
          "payload": {
            "id": "ESP32-TEST001",
            "t": 28.0,
            "h": 60.0,
            "gasA": 1300,
            "gasD": 0,
            "alarm": false
          }
        }
      ]
    }
  },
  "mqtt_cli_examples": {
    "publish_normal": "mosquitto_pub -h localhost -t 'nimak/deteksi-api/telemetry' -m '{\"id\":\"ESP32-TEST001\",\"t\":27.5,\"h\":62.0,\"gasA\":1200,\"gasD\":0,\"alarm\":false}'",
    "publish_alarm": "mosquitto_pub -h localhost -t 'nimak/deteksi-api/telemetry' -m '{\"id\":\"ESP32-TEST001\",\"t\":55.0,\"h\":45.0,\"gasA\":3900,\"gasD\":1,\"alarm\":true}'",
    "send_buzzer_on": "mosquitto_pub -h localhost -t 'nimak/deteksi-api/cmd' -m 'BUZZER_ON'",
    "send_threshold": "mosquitto_pub -h localhost -t 'nimak/deteksi-api/cmd' -m 'THR=2500'",
    "subscribe_all": "mosquitto_sub -h localhost -t 'nimak/deteksi-api/#' -v"
  }
}
