{
  "apps": [
    {
      "name": "proxy-server",
      "script": "./server.js",
      "cwd": "/home/ubuntu/sudahtapibelum/proxy-server",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
